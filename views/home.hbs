<div id="filter-container">
    <h2>Search Recipes</h2>
    <form method="GET" action="/">
        <input type="text" name="recipeQ" placeholder="Enter recipe name..." />
        <input type="submit" value="Search" />
    </form>
    {{!-- put filter functionality in sidebar later --}}
    <h2>Filter Recipes by Ingredients</h2>
    <form method="GET" action="/">
        <input type="text" name="searchQ" placeholder="Search ingredients..." />
        <input type="submit" value="Search" />
    </form>
    <h1>{{title}}</h1>
    <div class="recipes-display-container">
        {{#each recipe}}
        <article class="recipe-article">
            <h1>{{name}}</h1>
            <h3>{{altName}}</h3>
            <p>Prep Time: {{prepTime}} minutes</p>
            <p>{{description}}</p>
            <a href="/recipe/{{name}}">See more</a>
        </article>
        {{/each}}
    </div>
</div>